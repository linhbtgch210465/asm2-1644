<div class="col">
   <div class="row">
      <h1 class="text text-primary text-center">Toy Order</h1>
   </div>
   <div class="row">
      <table class="table table-bordered text-center">
         <tr>
            <th colspan="2">
               <img src="{{ toyLegos.image }}" width="300" height="300">
            </th>
         </tr>
         <tr>
            <th>Name</th>
            <th>{{toyLegos.name}}</th>
         </tr>
             <tr>
            <th>Detail</th>
            <th>{{detail}}</th>
         </tr>
         <tr>
            <th>Order quantity</th>
            <th>{{ order_quantity }}</th>
         </tr>
         <tr>
            <th>Total price</th>
            <th>${{ total_price }}</th>
         </tr>
         <tr class="text-center">
            <th colspan="2">
               <a class="btn btn-danger" href="/listLego">Confirm</a>
            </th>
         </tr>
      </table>
   </div>
</div>