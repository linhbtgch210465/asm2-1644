<form class="bg-light text-center col-md-8" action="/editlego/{{toyLegos._id}}" method="post">
   <form>
      <div class="modal-header">
         <h4 class="modal-title">Edit Lego Product</h4>
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Name</label>
         <input class="form-control" type="text" name="name" value="{{ toyLegos.name }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Brand</label>
         <input class="form-control" type="text" name="brand" value="{{ toyLegos.brand }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Price</label>
         <input class="form-control" type="text" name="price" value="{{ toyLegos.price }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Detail</label>
         <input class="form-control" type="text" name="detail" value="{{ toyLegos.detail }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Quantity</label>
         <input class="form-control" type="number" name="quantity" value="{{ toyLegos.quantity }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Image</label><br>
         <img src="{{ toyLegos.image}}" width="100" height="100"><br>
         <input class="form-control" type="text" name="image" value="{{ toyLegos.image }}" required>
      </div>
      <div class="modal-footer">
         <input type="submit" class="btn btn-info" value="Save">
      </div>
   </form>
</form>