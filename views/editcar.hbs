<form class="bg-light text-center col-md-8" action="/editcar/{{toyCars._id}}" method="post">
   <form>
      <div class="modal-header">
         <h4 class="modal-title">Edit Products</h4>
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Name</label>
         <input class="form-control" type="text" name="name" value="{{ toyCars.name }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Brand</label>
         <input class="form-control" type="text" name="brand" value="{{ toyCars.brand }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Price</label>
         <input class="form-control" type="text" name="price" value="{{ toyCars.price }}" required>
      </div>
       <div class="form-group mt-3">
         <label class="text text-success">Date</label>
         <input class="form-control" type="text" name="date" value="{{ toyCars.date }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Detail</label>
         <input class="form-control" type="text" name="detail" value="{{ toyCars.detail }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Quantity</label>
         <input class="form-control" type="number" name="quantity" value="{{ toyCars.quantity }}" required>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Image</label><br>
         <img src="{{ toyCars.image}}" width="100" height="100"><br>
         <input class="form-control" type="text" name="image" value="{{ toyCars.image }}" required>
      </div>
      <div class="modal-footer">
         <input type="submit" class="btn btn-info" value="Save">
      </div>
   </form>
</form>