                </tr>
                <tr>
                    <th>Name</th>
                    <th>{{ toyLegos.name }}</th>
                </tr>
                <tr>
                    <th>Brand</th>
                    <th>{{ toyLegos.brand }}</th>
                </tr>
                <tr>
                    <th>Detail</th>
                    <th>{{ toyLegos.detail }}</th>
                </tr>
                <tr>
                    <th>Quantity</th>
                    <th>{{ toyLegos.quantity }}</th>
                </tr>
                <tr>
                    <th>Price</th>
